{
  "version": 2,
  "name": "now-lumen-core",
  "scope": "openepicdata",
  "public": true,
  "builds": [
    {
      "src": "public/index.php",
      "use": "now-php@0.0.9-experimental.1",
      "config": {
        "mode": "cgi",
        "composer": true
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "public/index.php" }
  ]
}
